  "name": "CalamusTraits",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "remoteEnv": {
    // Use a GitHub Codespaces secret:
    "SOURCE_PDF": "${localEnv:SOURCE_PDF}",
