{
  "name": "Python 3.13",
  "image": "mcr.microsoft.com/devcontainers/python:3.13-bullseye",  
  "remoteEnv": {
    // Use a GitHub Codespaces secret:
    "SOURCE_PDF": "${localEnv:SOURCE_PDF}"
  },
  "postStartCommand": "pip install -r requirements.txt && bash ./.devcontainer/setup-ssh.sh",
  "settings": {
    "terminal.integrated.startIn": "none"
  }
}
